<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ModelActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <Space
            android:layout_width="match_parent"
            android:layout_height="100px" />

        <EditText
            android:id="@+id/model_add_manufacturer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/manufacturer_name"
            android:inputType="textAutoComplete" />

        <EditText
            android:id="@+id/model_add_model_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/model_name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/model_add_engine_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/engine_capacity"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/model_add_seating"
            style="@android:style/Widget.AutoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/seating"
            android:inputType="number" />

        <Spinner
            android:id="@+id/model_add_gear_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/gear_box"
            android:inputType="number" />

        <Button
            android:id="@+id/model_add_buttun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickAddModel"
            android:text="@string/add" />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>